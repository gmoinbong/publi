<IfModule mod_mime.c>
  # Set MIME types for JavaScript files (critical for module scripts)
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType text/css .css
  AddType application/json .json
  AddType image/svg+xml .svg
  AddType image/png .png
  AddType image/jpeg .jpg .jpeg
  AddType image/gif .gif
  AddType image/webp .webp
  AddType image/x-icon .ico
  AddType application/wasm .wasm
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(css)$">
    Header set Content-Type "text/css; charset=utf-8"
  </FilesMatch>
  
  <FilesMatch "\.(js|mjs)$">
    Header set Content-Type "application/javascript; charset=utf-8"
  </FilesMatch>
  
  <FilesMatch "\.(json)$">
    Header set Content-Type "application/json; charset=utf-8"
  </FilesMatch>
</IfModule>

# SPA fallback - redirect all requests to index.html (but NOT for existing files)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Don't rewrite if file exists (this should prevent rewriting existing JS/CSS/JSON files)
  RewriteCond %{REQUEST_FILENAME} !-f
  # Don't rewrite if directory exists
  RewriteCond %{REQUEST_FILENAME} !-d
  # Don't rewrite assets folder (JS, CSS files)
  RewriteCond %{REQUEST_URI} !^/assets/
  # Don't rewrite animations folder (JSON files)
  RewriteCond %{REQUEST_URI} !^/animations/
  # Don't rewrite images folder
  RewriteCond %{REQUEST_URI} !^/images/
  # Don't rewrite if it's a file with extension (extra safety)
  RewriteCond %{REQUEST_URI} !\.[a-zA-Z0-9]+$
  
  # Rewrite everything else to index.html
  RewriteRule ^ index.html [L]
</IfModule>


